<h1>Listing equipos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Fundacion</th>
    <th>Historia</th>
    <th>Grupo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipos.each do |equipo| %>
  <tr>
    <td><%= equipo.nombre %></td>
    <td><%= equipo.fundacion %></td>
    <td><%= equipo.historia %></td>
    <td><%= equipo.grupo.nombre %></td>
    <td><%= link_to 'Show', equipo %></td>
    <td><%= link_to 'Edit', edit_equipo_path(equipo) %></td>
    <td><%= link_to 'Destroy', equipo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

